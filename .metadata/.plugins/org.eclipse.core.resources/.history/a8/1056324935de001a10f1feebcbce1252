</head>
<body>
<script>
function addornot(){
  var click = $('#click');
  var post_no = $('#post_no', click).val();
  var user_id = $('#user_id', click).val();
  console.log("post_no, user_id : " + post_no +","+ user_id);
  $.ajax({
    url: "Url",
    type: "GET",
    cache: false,
    dataType: "json",
    data: 'post_no=' +post_no+ '& user_id=' +user_id,
    success: function(data) {

      if(data.check == 0){
        img = "../images/emptyheart.png";
      } else {
        img = "../images/heart.png";
      }      
      $('#img', click).attr('src', img);
      $('#count').html(data.count);
      $('#check').html(data.check);
    },
    error: function(request, status, error){
      alert("code:"+request.status+"\n"+"message:"+request.responseText+"\n"+"error:"+error);
    }
  });
}
</script>
</body>
</html>
package com.woongjin.woongs.controller;

import java.util.*;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.servlet.ModelAndView;

import com.woongjin.woongs.service.Income3Service;

@Controller
public class Income3Controller {

	@Autowired
	Income3Service income3Service;
	@RequestMapping(value = "/income3", method = RequestMethod.GET)
	public ModelAndView manageIncome3(HttpSession session) {
		
		ModelAndView mav = new ModelAndView();
		//String price = (String)session.setAttribute("price", price); 
		String user_id = (String) session.getAttribute("user_id");
		
		Map<String, Object> findIncomeById = income3Service.findIncomeById(user_id);
		Map<String, Object> findMoneyById = income3Service.findMoneyById(user_id);
		
		mav.addObject("findIncomeById", findIncomeById);
		mav.addObject("findMoneyById", findMoneyById);
		mav.setViewName("manageIncome3");
		
		return mav;
	}
	
	@RequestMapping(value = "/findIncomeByUserId3", method = RequestMethod.GET)
	@ResponseBody
	public Map<String, Object> findIncomeByUserId3( HttpServletRequest request ) {
		
		String userId = (String) request.getSession().getAttribute("user_id");
		
		userId = "LDS";
		Map<String, Object >map = new HashMap<>();
		map.put("USER_ID", userId);
		return income3Service.findIncomeById(map);
	}
}